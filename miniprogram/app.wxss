/** 全局样式 - CodePilot Mini */
page {
  background-color: #16213e;
  color: #e8e8e8;
  font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", sans-serif;
  font-size: 28rpx;
  line-height: 1.5;
}

.container {
  box-sizing: border-box;
  padding: 32rpx;
  min-height: 100vh;
}

/* 主按钮 */
.btn-primary {
  background: linear-gradient(135deg, #0f3460 0%, #1a1a2e 100%);
  color: #e94560;
  border: 2rpx solid #e94560;
  border-radius: 12rpx;
  padding: 24rpx 48rpx;
  font-size: 30rpx;
}

.btn-primary:active {
  opacity: 0.9;
}

/* 代码块 */
.code-block {
  background: #0f3460;
  border-radius: 12rpx;
  padding: 24rpx;
  font-family: "Monaco", "Consolas", monospace;
  font-size: 24rpx;
  overflow-x: auto;
  white-space: pre-wrap;
  word-break: break-all;
}

.text-muted {
  color: #8892a0;
  font-size: 24rpx;
}
