/**
 * CodePilot Mini 全局样式 - 简约风格
 * 设计：留白充足、层次清晰、主色点缀
 */

page {
  background-color: #1a1f2e;
  color: #e2e8f0;
  font-family: -apple-system, BlinkMacSystemFont, "PingFang SC", "Helvetica Neue", sans-serif;
  font-size: 28rpx;
  line-height: 1.6;
}

.container {
  box-sizing: border-box;
  padding: 40rpx 36rpx 48rpx;
  min-height: 100vh;
}

/* 主按钮 - 简约实心 */
.btn-primary {
  background: linear-gradient(135deg, #6366f1 0%, #4f46e5 100%);
  color: #fff;
  border: none;
  border-radius: 16rpx;
  padding: 28rpx 48rpx;
  font-size: 30rpx;
  font-weight: 500;
  letter-spacing: 0.5rpx;
}

.btn-primary:active {
  opacity: 0.92;
}

.btn-primary[disabled] {
  opacity: 0.6;
}

/* 代码块 */
.code-block {
  background: #252d3d;
  border-radius: 12rpx;
  padding: 28rpx;
  font-family: "SF Mono", "Monaco", "Consolas", monospace;
  font-size: 24rpx;
  line-height: 1.5;
  overflow-x: auto;
  white-space: pre-wrap;
  word-break: break-all;
  color: #cbd5e1;
  border: 1rpx solid #334155;
}

.text-muted {
  color: #94a3b8;
  font-size: 24rpx;
}
