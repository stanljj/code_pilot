<view class="container">
  <view class="section" wx:if="{{requestType}}">
    <text class="label">类型</text>
    <text class="value">{{requestType === 'enterprise' ? '企业上下文' : '公共问答'}}</text>
  </view>

  <view class="section" wx:if="{{analysis}}">
    <text class="label">分析</text>
    <text class="value">{{analysis}}</text>
  </view>

  <view class="section" wx:if="{{suggestion}}">
    <text class="label">建议</text>
    <text class="value block">{{suggestion}}</text>
  </view>

  <view class="section" wx:if="{{code}}">
    <view class="label-row">
      <text class="label">代码</text>
      <text class="link" bindtap="copyCode">复制</text>
    </view>
    <view class="code-block">{{code}}</view>
  </view>

  <view class="section" wx:if="{{docRefs && docRefs.length > 0}}">
    <text class="label">参考文档</text>
    <view class="doc-refs" wx:for="{{docRefs}}" wx:key="title">
      <text class="doc-title">{{item.title}}</text>
      <text class="doc-link" wx:if="{{item.link}}" bindtap="openLink" data-url="{{item.link}}">{{item.link}}</text>
    </view>
  </view>

  <button class="btn-primary" bindtap="onBack">返回继续提问</button>
</view>
