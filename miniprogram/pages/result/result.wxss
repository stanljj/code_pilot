/* 结果页 - 简约风格 */

.section {
  margin-bottom: 40rpx;
}

.label {
  display: block;
  font-size: 24rpx;
  color: #94a3b8;
  margin-bottom: 12rpx;
  font-weight: 500;
}

.label-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12rpx;
}

.label-row .link {
  font-size: 24rpx;
  color: #6366f1;
}

.label-row .link:active {
  opacity: 0.8;
}

.value {
  font-size: 28rpx;
  color: #e2e8f0;
  line-height: 1.6;
}

.value.block {
  display: block;
  white-space: pre-wrap;
  word-break: break-all;
}

.code-block {
  background: #252d3d;
  border-radius: 12rpx;
  padding: 28rpx;
  font-family: "SF Mono", "Monaco", "Consolas", monospace;
  font-size: 24rpx;
  line-height: 1.5;
  white-space: pre-wrap;
  word-break: break-all;
  margin-top: 12rpx;
  color: #cbd5e1;
  border: 1rpx solid #334155;
}

.doc-refs {
  margin-top: 12rpx;
}

.doc-title {
  display: block;
  font-size: 26rpx;
  color: #e2e8f0;
  margin-bottom: 6rpx;
}

.doc-link {
  display: block;
  font-size: 24rpx;
  color: #6366f1;
  word-break: break-all;
  margin-bottom: 16rpx;
}

.doc-link:active {
  opacity: 0.8;
}

.btn-primary {
  margin-top: 48rpx;
  width: 100%;
}
