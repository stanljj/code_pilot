.header {
  margin-bottom: 48rpx;
}

.title {
  display: block;
  font-size: 44rpx;
  font-weight: bold;
  color: #e94560;
  margin-bottom: 16rpx;
}

.subtitle {
  font-size: 26rpx;
  color: #8892a0;
}

.form .textarea {
  width: 100%;
  min-height: 320rpx;
  box-sizing: border-box;
  padding: 24rpx;
  background: #0f3460;
  border-radius: 12rpx;
  color: #e8e8e8;
  font-size: 28rpx;
  margin-bottom: 16rpx;
}

.form .placeholder {
  color: #5a6577;
}

.rag-tips {
  margin-bottom: 24rpx;
  padding: 20rpx;
  background: #0f3460;
  border-radius: 12rpx;
  border: 1rpx solid #2a4d8c;
}

.rag-tips-title {
  display: block;
  font-size: 24rpx;
  color: #e94560;
  margin-bottom: 16rpx;
}

.rag-chips {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.rag-chip {
  display: inline-block;
  padding: 12rpx 20rpx;
  background: #1a1a2e;
  border: 1rpx solid #e94560;
  border-radius: 8rpx;
  font-size: 24rpx;
  color: #a0aec0;
  white-space: normal;
  word-break: break-all;
}

.rag-chip:active {
  background: #2a4d8c;
  color: #fff;
}

.char-count {
  margin-bottom: 24rpx;
}

.form .btn-primary {
  width: 100%;
}

.tips {
  margin-top: 48rpx;
  padding: 24rpx;
  font-size: 24rpx;
}

.tips text {
  display: block;
  margin-bottom: 8rpx;
}

.tips .tips-title {
  color: #e94560;
  margin-bottom: 12rpx;
}

/* OCR功能样式 */
.ocr-section {
  margin: 32rpx 0;
  padding: 24rpx;
  background: #0f3460;
  border-radius: 12rpx;
  border: 1px solid #2a4d8c;
}

.ocr-title {
  font-size: 28rpx;
  color: #e94560;
  font-weight: bold;
  margin-bottom: 24rpx;
  text-align: center;
}

.ocr-buttons {
  display: flex;
  justify-content: space-between;
  gap: 20rpx;
  margin-bottom: 24rpx;
}

.ocr-buttons .btn-secondary {
  flex: 1;
  background: #2a4d8c;
  border: 1px solid #4a6db2;
  color: #ffffff;
  font-size: 26rpx;
  padding: 20rpx 0;
  border-radius: 8rpx;
}

.ocr-buttons .btn-secondary:active {
  background: #1a3d7c;
}

.image-preview {
  margin-bottom: 24rpx;
  text-align: center;
}

.preview-image {
  max-width: 100%;
  max-height: 300rpx;
  border-radius: 8rpx;
  border: 1px solid #4a6db2;
  margin-bottom: 16rpx;
}

.btn-clear {
  background: #dc3545;
  color: #ffffff;
  border: none;
  font-size: 24rpx;
  padding: 12rpx 24rpx;
  border-radius: 6rpx;
}

.btn-clear:active {
  background: #bd2130;
}

.ocr-submit {
  margin-top: 16rpx;
  background: #e94560;
  border: 1px solid #ff5c77;
}

.ocr-submit:active {
  background: #d93550;
}

.login-link {
  margin-top: 24rpx;
  text-align: center;
}

.login-link .link {
  color: #e94560;
  font-size: 26rpx;
}
