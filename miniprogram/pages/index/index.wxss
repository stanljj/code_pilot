/* 首页 - 简约风格 */

.header {
  margin-bottom: 56rpx;
  padding-top: 16rpx;
}

.title {
  display: block;
  font-size: 40rpx;
  font-weight: 600;
  color: #f1f5f9;
  margin-bottom: 12rpx;
  letter-spacing: -0.5rpx;
}

.subtitle {
  font-size: 26rpx;
  color: #94a3b8;
  line-height: 1.5;
}

/* 输入区 */
.form .textarea {
  width: 100%;
  min-height: 280rpx;
  box-sizing: border-box;
  padding: 28rpx;
  background: #252d3d;
  border-radius: 16rpx;
  color: #e2e8f0;
  font-size: 28rpx;
  margin-bottom: 12rpx;
  border: 1rpx solid #334155;
  line-height: 1.5;
}

.form .textarea:focus {
  border-color: #6366f1;
}

.form .placeholder {
  color: #64748b;
}

.char-count {
  margin-bottom: 28rpx;
  font-size: 24rpx;
}

/* RAG 快捷入口 */
.rag-tips {
  margin-bottom: 28rpx;
  padding: 24rpx;
  background: #252d3d;
  border-radius: 16rpx;
  border: 1rpx solid #334155;
}

.rag-tips-title {
  display: block;
  font-size: 24rpx;
  color: #94a3b8;
  margin-bottom: 16rpx;
}

.rag-chips {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
}

.rag-chip {
  display: inline-block;
  padding: 14rpx 22rpx;
  background: #1e293b;
  border: 1rpx solid #475569;
  border-radius: 24rpx;
  font-size: 24rpx;
  color: #cbd5e1;
  white-space: normal;
  word-break: break-all;
}

.rag-chip:active {
  background: #334155;
  border-color: #6366f1;
  color: #e2e8f0;
}

/* 主提交按钮 */
.form .btn-primary {
  width: 100%;
  margin-bottom: 20rpx;
}

/* OCR 区域 */
.ocr-section {
  margin: 32rpx 0 28rpx;
  padding: 28rpx;
  background: #252d3d;
  border-radius: 16rpx;
  border: 1rpx solid #334155;
}

.ocr-title {
  font-size: 26rpx;
  color: #94a3b8;
  font-weight: 500;
  margin-bottom: 24rpx;
  text-align: center;
}

.ocr-buttons {
  display: flex;
  justify-content: space-between;
  gap: 20rpx;
  margin-bottom: 20rpx;
}

.ocr-buttons .btn-secondary {
  flex: 1;
  background: #334155;
  border: 1rpx solid #475569;
  color: #e2e8f0;
  font-size: 26rpx;
  padding: 22rpx 0;
  border-radius: 12rpx;
}

.ocr-buttons .btn-secondary:active {
  background: #475569;
}

.image-preview {
  margin-bottom: 20rpx;
  text-align: center;
}

.preview-image {
  max-width: 100%;
  max-height: 300rpx;
  border-radius: 12rpx;
  border: 1rpx solid #475569;
  margin-bottom: 16rpx;
}

.btn-clear {
  background: #475569;
  color: #e2e8f0;
  border: none;
  font-size: 24rpx;
  padding: 12rpx 28rpx;
  border-radius: 12rpx;
}

.btn-clear:active {
  background: #64748b;
}

.ocr-submit {
  margin-top: 8rpx;
  background: linear-gradient(135deg, #6366f1 0%, #4f46e5 100%);
  color: #fff;
  border: none;
}

/* 底部提示 */
.tips {
  margin-top: 48rpx;
  padding: 24rpx 0;
  font-size: 24rpx;
  color: #64748b;
}

.tips text {
  display: block;
  margin-bottom: 8rpx;
  line-height: 1.5;
}

.tips .tips-title {
  color: #94a3b8;
  margin-bottom: 12rpx;
  font-weight: 500;
}

.login-link {
  margin-top: 32rpx;
  text-align: center;
}

.login-link .link {
  color: #6366f1;
  font-size: 26rpx;
}

.login-link .link:active {
  opacity: 0.8;
}
