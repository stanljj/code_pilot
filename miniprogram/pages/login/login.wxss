.header {
  margin-bottom: 64rpx;
}

.title {
  display: block;
  font-size: 48rpx;
  font-weight: bold;
  color: #e94560;
  margin-bottom: 20rpx;
}

.subtitle {
  font-size: 28rpx;
  color: #8892a0;
}

.card {
  background: #0f3460;
  border-radius: 16rpx;
  padding: 48rpx;
  margin-bottom: 32rpx;
  border: 1rpx solid #2a4d8c;
}

.card-title {
  font-size: 34rpx;
  font-weight: bold;
  color: #e8e8e8;
  margin-bottom: 16rpx;
}

.card-desc {
  font-size: 26rpx;
  color: #8892a0;
  margin-bottom: 40rpx;
  line-height: 1.6;
}

.btn-login {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  background: linear-gradient(135deg, #e94560 0%, #c73e54 100%);
  color: #fff;
  border: none;
  border-radius: 12rpx;
  font-size: 32rpx;
}

.btn-login:active {
  opacity: 0.9;
}

.btn-login[disabled] {
  color: rgba(255, 255, 255, 0.8);
}

.debug-section {
  background: #1a1a2e;
  border: 1rpx solid #e94560;
  border-radius: 12rpx;
  padding: 24rpx;
  margin-bottom: 24rpx;
}

.debug-title {
  font-size: 26rpx;
  font-weight: bold;
  color: #e94560;
  margin-bottom: 16rpx;
}

.debug-item {
  font-size: 24rpx;
  color: #a0aec0;
  margin-bottom: 12rpx;
  word-break: break-all;
}

.debug-tip {
  font-size: 22rpx;
  color: #8892a0;
  line-height: 1.5;
}

.tips {
  padding: 16rpx 0;
  font-size: 24rpx;
}

.tips text {
  display: block;
}
