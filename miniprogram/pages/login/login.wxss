/* 登录页 - 简约风格 */

.header {
  margin-bottom: 72rpx;
  padding-top: 24rpx;
}

.title {
  display: block;
  font-size: 42rpx;
  font-weight: 600;
  color: #f1f5f9;
  margin-bottom: 14rpx;
  letter-spacing: -0.5rpx;
}

.subtitle {
  font-size: 28rpx;
  color: #94a3b8;
  line-height: 1.5;
}

.card {
  background: #252d3d;
  border-radius: 20rpx;
  padding: 48rpx 40rpx;
  margin-bottom: 36rpx;
  border: 1rpx solid #334155;
}

.card-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #e2e8f0;
  margin-bottom: 16rpx;
}

.card-desc {
  font-size: 26rpx;
  color: #94a3b8;
  margin-bottom: 40rpx;
  line-height: 1.6;
}

.btn-login {
  width: 100%;
  height: 96rpx;
  line-height: 96rpx;
  background: linear-gradient(135deg, #6366f1 0%, #4f46e5 100%);
  color: #fff;
  border: none;
  border-radius: 16rpx;
  font-size: 30rpx;
  font-weight: 500;
}

.btn-login:active {
  opacity: 0.92;
}

.btn-login[disabled] {
  opacity: 0.6;
}

.debug-section {
  background: #252d3d;
  border: 1rpx solid #334155;
  border-radius: 16rpx;
  padding: 28rpx;
  margin-bottom: 28rpx;
}

.debug-title {
  font-size: 26rpx;
  font-weight: 600;
  color: #94a3b8;
  margin-bottom: 16rpx;
}

.debug-item {
  font-size: 24rpx;
  color: #cbd5e1;
  margin-bottom: 12rpx;
  word-break: break-all;
}

.debug-tip {
  font-size: 22rpx;
  color: #64748b;
  line-height: 1.5;
}

.tips {
  padding: 16rpx 0;
  font-size: 24rpx;
  color: #64748b;
}

.tips text {
  display: block;
  line-height: 1.5;
}
